<% layout('/layouts/boilerplate') -%>
<body>
  <div class="container d-flex flex-column align-items-center mt-4">
    <h3 class="text-center mb-4"><%= listing.title %></h3>

    <div class="card mb-4 listing-card" style="width: 24rem">
      <img
        src="<%= listing.image %>"
        class="card-img-top"
        alt="Listing Image"
        style="height: 200px; object-fit: cover"
      />
      <div class="card-body">
        <p class="card-text"> 
          Owned by - <i><%= listing.owner ? listing.owner.username : "Unknown Owner" %> </i> 
        </p>
        
        <p class="card-text"><%= listing.description %></p>
        <p class="fw-bold">
          &#8377;<%= listing.price.toLocaleString("en-IN") %>
        </p>
        <p class="text-muted">
          <%= listing.location %>, <%= listing.country %>
        </p>
      </div>
    </div>

      <% if (currUser && currUser._id.equals(listing.owner._id)) { %>



        <div class="d-flex gap-3">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning"
            >Edit Listing</a
          >
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-danger">Delete Listing</button>
          </form>
        </div>
       
      <% } %>
    <div class="offset-3 col-8 mt-3 mb-3">
      <hr />
      <h4>Leave a Review</h4>
      <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">

        <div class="mt-3 mb-3">
          <label for="rating" class="form-label">Rating</label>
          <input
            type="range"
            min="1"
            max="5"
            id="rating"
            name="review[rating]"
          />
        </div>
        <div class="mt-3 mb-3">
          <label class="form" for="comment">Comments</label>
          <textarea
            required
            class="form-control"
            name="review[comment]"
            cols="10"
            rows="5"
            id="comment"
          ></textarea>
          <div class="invalid-feedback">Please add some comments to review</div>
        </div>
        <button class="btn btn-danger">Submit button</button>
      </form>
      <hr>
            <h5>Customer review</h5>
            <div class="row row-col-sm-1">
            <% for(review of listing.reviews){%>
                  
               <div class="col-5 card ms-2 mb-3">
                  <div class="card-body card-review">
                     <h6 class="card-title">Jhon methew</h6>
                     <p class="card-text"><%=review.comment%></p>
                     <p class="card-text"><%=review.rating%> star</p>
                     <form class="mb-3 mt-3" method="POST" 
                     action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
                     
                        <button class="btn btn-sm btn-dark">Delete</button>
                     </form>
                  </div>
               </div>
            <%}%>
    </ul>
    </div>
  </div>
</body>
