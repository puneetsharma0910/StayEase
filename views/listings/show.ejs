<% layout('/layouts/boilerplate') -%>
<body>
  <div class="container d-flex flex-column align-items-center mt-4">
    <h3 class="text-center mb-4"><%= listing.title %></h3>

    <div class="card mb-4" style="width: 24rem">
      <img
        src="<%= listing.image %>"
        class="card-img-top"
        alt="Listing Image"
        style="height: 200px; object-fit: cover"
      />
      <div class="card-body">
        <p class="card-text"><%= listing.description %></p>
        <p class="fw-bold">
          &#8377;<%= listing.price.toLocaleString("en-IN") %>
        </p>
        <p class="text-muted">
          <%= listing.location %>, <%= listing.country %>
        </p>
      </div>
    </div>

    <div class="d-flex gap-3">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning"
        >Edit Listing</a
      >
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-danger">Delete Listing</button>
      </form>
    </div>
    <div class="offset-3 col-8 mt-3 mb-3" >
      <hr />
      <h4>Leave a Review</h4>
      <form action="<%=listing.id %>/reviews" 
        novalidate class="needs-validation"
        method="POST">
        <div class="mt-3 mb-3">
          <label for="rating" class="form-label">Rating</label>
          <input
            type="range"
            min="1"
            max="5"
            id="rating"
            name="review[rating]"
          />
        </div>
        <div class="mt-3 mb-3">
          <label class="fomr-label" for="comment">Comments</label>
          <textarea
            required
            class="form-control"
            name="review[comments]"
            cols="10"
            rows="5"
            id="comment"
          ></textarea>
          <div class="invalid-feedback">Please add some comments to review</div>
        </div>
        <button class="btn btn-danger">Submit button</button>
      </form>
    </div>
  </div>
</body>
