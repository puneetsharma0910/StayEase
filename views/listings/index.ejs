<% layout('/layouts/boilerplate') -%>
<body>
  <div class="container mt-4">
    <h3 class="text-center">All Listings</h3>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 justify-content-center">
      <% for(let listing of allListings) { %>
      <div class="col d-flex justify-content-center mb-4">
        <a href="/listings/<%= listing._id %>" class="linking-image">
          <div class="card-col listing-card">
            <div class="image-container">
              <img src="<%= listing.image %>" class="card-img-top" alt="Listing Image" />
              <div class="card-image-overlay"></div> 
            </div>
            
            <div class="card-body text-center">
              <p class="card-text">
                <b><%= listing.title %></b> <br />
                &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
              </p>
            </div>
          </div>
        </a>
      </div>
      <% } %>
    </div>
  </div>
</body>