<% layout('/layouts/boilerplate') -%>
<body>
  <h3 class="text-center mt-3">Edit Listing</h3>
  <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
    <div class="row justify-content-center">
      <div class="col-md-6">
        
        <!-- Title Field -->
        <div class="row">
          <div class="col-md-12 mb-3">
            <label for="title" class="form-label">Title</label>
            <input
              name="listing[title]"
              type="text"
              required
              placeholder="Enter title"
              class="form-control"
              value="<%= listing.title %>"
            />
            <div class="invalid-feedback">
              Please Enter valid Title
            </div>
          </div>
        </div>

        <!-- Image Field -->

        <div>
          <img src="<%= originalImageUrl %>" alt="">
        </div>
        <div class="row">
          <div class="col-md-12 mb-3">
            <label for="image" class="form-label">Upload New Image</label>
            <input
              type="file"
              
              name="listing[image]"
              class="form-control"
         
           
            />
            <div class="invalid-feedback">
              Please Enter valid Image
            </div>
          </div>
        </div>

        <!-- Price and Country Section -->
        <div class="row">
          <div class="col-lg-6 col-md-12 mb-3">
            <label for="price" class="form-label">Price</label>
            <input
              type="number"
              required
              class="form-control"
              placeholder="Enter price"
              name="listing[price]"
              value="<%= listing.price %>"
            />
            <div class="invalid-feedback">
              Please Enter valid Price
            </div>
          </div>

          <div class="col-lg-6 col-md-12 mb-3">
            <label for="country" class="form-label">Country</label>
            <input
              type="text"
              required
              class="form-control"
              placeholder="Enter country"
              name="listing[country]"
              value="<%= listing.country %>"
            />
            <div class="invalid-feedback">
              Please Enter valid Country
            </div>
          </div>
        </div>

        <!-- Location Field -->
        <div class="row">
          <div class="col-md-12 mb-3">
            <label for="location" class="form-label">Location</label>
            <input
              type="text"
              required
              class="form-control"
              placeholder="Enter location"
              name="listing[location]"
              value="<%= listing.location %>"
            />
            <div class="invalid-feedback">
              Please Enter valid Location
            </div>
          </div>
        </div>

        <!-- Description Field -->
        <div class="row">
          <div class="col-md-12 mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea
              name="listing[description]"
              required
              class="form-control"
              placeholder="Enter description"
            ><%= listing.description %></textarea>
            <div class="invalid-feedback">
              Please Enter valid Description
            </div>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="text-center mb-3">
          <button class="btn btn-dark edit-btn">Update Listing</button>
        </div>
        
      </div>
    </div>
  </form>
</body>
