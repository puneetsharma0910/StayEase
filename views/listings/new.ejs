<% layout('/layouts/boilerplate') -%>
  <body>
    <h3>Enter Listing</h3>
    <form action="/listings" method="POST">
      <input name="listing[title]" type="text" placeholder="Enter title" />
      <br />
      <br />

      <textarea
        name="listing[description]"
        id=""
        placeholder="Enter description"
      ></textarea>
      <br />

      <br />

      <input type="text" name="listing[image]" placeholder="Enter image url/Link" />
      <br />
      <br />
      <input type="number" placeholder="Enter price" name="listing[price]" />
      <br />
      <br />
      <input type="text" placeholder="Enter country" name="listing[country]" />
      <br />
      <br />

      <input type="text " placeholder="Enter location" name="listing[location]" />
      <br />
      <br />
      <button>Add</button>
    </form>
  </body>

