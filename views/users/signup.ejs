<% layout('/layouts/boilerplate') -%>

<div class="row mt-3">
  <h1 class="col-6 offset-3">Signup on StayEase</h1>
  <div class="col-6 offset-3">
    <form action="/signup" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          type="text"
          required
          placeholder="Enter username"
          class="form-control"
        />
      </div>

      <div class="valid-feedback">Looks Good~</div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          name="email"
          type="email"
          required
          placeholder="Enter email"
          class="form-control"
        />
      </div>
      <div class="mb-3">
        <label for="Password" class="form-label">Password</label>
        <input name="password" type="password" required placeholder="Enter Password" class="form-control" />

      </div>
      <button class="btn btn-dark edit-btn"> Signup

      </button>


    </form>
  </div>
</div>
